CREATE TABLE Customer (
    CustomerID INT IDENTITY(1,1) PRIMARY KEY,
    FirstName NVARCHAR(50) NOT NULL,
    LastName NVARCHAR(50) NOT NULL,
    Address NVARCHAR(100) NOT NULL,
    Phone NVARCHAR(20) NOT NULL,
    Email NVARCHAR(100) NOT NULL
);

CREATE TABLE PropertyType (
    PropertyTypeID INT IDENTITY(1,1) PRIMARY KEY,
    PropertyTypeName NVARCHAR(50) NOT NULL,
    Description NVARCHAR(100) NOT NULL
);

CREATE TABLE Property (
    PropertyID INT IDENTITY(1,1) PRIMARY KEY,
    PropertyTypeID INT NOT NULL,
    Address NVARCHAR(100) NOT NULL,
    Price MONEY NOT NULL,
    Status NVARCHAR(20) NOT NULL,
    CONSTRAINT FK_Property_PropertyType FOREIGN KEY (PropertyTypeID) REFERENCES PropertyType (PropertyTypeID)
);

CREATE TABLE Sale (
    SaleID INT IDENTITY(1,1) PRIMARY KEY,
    PropertyID INT NOT NULL,
    CustomerID INT NOT NULL,
    SaleDate DATE NOT NULL,
    Price MONEY NOT NULL,
    CONSTRAINT FK_Sale_Property FOREIGN KEY (PropertyID) REFERENCES Property (PropertyID),
    CONSTRAINT FK_Sale_Customer FOREIGN KEY (CustomerID) REFERENCES Customer (CustomerID)
);

CREATE TABLE Employee (
    EmployeeID INT IDENTITY(1,1) PRIMARY KEY,
    FirstName NVARCHAR(50) NOT NULL,
    LastName NVARCHAR(50) NOT NULL,
    Address NVARCHAR(100) NOT NULL,
    Phone NVARCHAR(20) NOT NULL,
    Email NVARCHAR(100) NOT NULL,
    Position NVARCHAR(50) NOT NULL
);

CREATE TABLE Transactin (
    TransactionID INT IDENTITY(1,1) PRIMARY KEY,
    SaleID INT NOT NULL,
    EmployeeID INT NOT NULL,
    TransactionDate DATE NOT NULL,
    CONSTRAINT FK_Transaction_Sale FOREIGN KEY (SaleID) REFERENCES Sale (SaleID),
    CONSTRAINT FK_Transaction_Employee FOREIGN KEY (EmployeeID) REFERENCES Employee (EmployeeID)
);
